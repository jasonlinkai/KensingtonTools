{
  "appId": "com.kensington.tools",
  "productName": "Kensington Tools",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "resources/**/*"
  ],
  "asar": true,
  "icon": "resources/appIcon",
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["universal"]
      },
      {
        "target": "zip",
        "arch": ["universal"]
      }
    ],
    "artifactName": "${productName}-universal.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "msi",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-setup-${version}.${ext}"
  }
} 